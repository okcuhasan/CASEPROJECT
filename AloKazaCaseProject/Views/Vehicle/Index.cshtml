@Html.AntiForgeryToken()

<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#VehicleModel">
  Add Vehicle
</button>
​
<!-- Modal -->
<div class="modal fade" id="VehicleModel" tabindex="-1" role="dialog" aria-labelledby="VehicleModelTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
              <label for="name">VehicleName</label>
            <input type="text" class="form-control" id="VehicleName" name="VehicleName" aria-describedby="VehicleNameHelp" placeholder="Enter your VehicleName">
​
            <label for="email">CarBrand</label>
            <input type="text" class="form-control" id="CarBrand" name="CarBrand" aria-describedby="CarBrandHelp" placeholder="Enter CarBrand name">
​
            <label for="email">AccidentSituation</label>
            <input type="text" class="form-control" id="AccidentSituation" name="AccidentSituation" aria-describedby="AccidentSituationHelp" placeholder="Enter AccidentSituation">
​
            <label for="mobile">TotalPrice</label>
            <input type="number" class="form-control" id="TotalPrice" name="TotalPrice" aria-describedby="TotalPriceHelp" placeholder="Enter your total price">
            <input type="hidden" id="id" name="id" /> 
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="btnAdd" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

            <table id="VehicleTable" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>VehicleName</th>
            <th>CarBrand</th>
            <th>AccidentSituation</th>
            <th>TotalPrice</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="tbodyid">      
    </tbody>

</table>



